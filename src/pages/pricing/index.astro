---
import BaseLayout from '../../layouts/BaseLayout.astro';
import Features from '../../components/Features';

const starter = ['Flowmodoro Timer', 'Task List', 'Today Stats'];
const pro = [
  'Everything in Starter',
  'Custom Break Ratio',
  'Unlimited Stats',
  'Priority Support',
];
---

<BaseLayout title="Pricing | Flowmodor" description="Pricing for Flowmodor">
  <div
    class="w-full flex flex-col sm:flex-row items-center sm:items-stretch justify-center gap-10 mt-32"
  >
    <div
      class="w-[90%] sm:w-2/5 lg:w-1/3 flex flex-col gap-10 bg-[#23223C] p-10 rounded-xl"
    >
      <div class="flex flex-col gap-2">
        <h2 class="text-2xl">Starter</h2>
        <div class="flex items-end gap-1">
          <h2 class="text-4xl font-semibold">$0</h2>
          <div class="opacity-50 text-sm">/ month</div>
        </div>
      </div>
      <a
        href="https://app.flowmodor.com/signin"
        class="text-center font-semibold cursor-pointer rounded-md p-2
        text-white border border-[#DBBFFF]"
      >
        Get started
      </a>
      <Features names={starter} />
    </div>
    <div
      class="w-[90%] sm:w-2/5 lg:w-1/3 flex flex-col gap-10 bg-[#23223C] p-10 rounded-xl"
    >
      <div class="flex flex-col gap-2">
        <h2 class="text-2xl">Pro</h2>
        <div class="flex items-end gap-1">
          <h2 class="text-4xl font-semibold">$5</h2>
          <div class="opacity-50 text-sm">/ month</div>
        </div>
      </div>
      <a
        href="https://app.flowmodor.com/plans"
        class="text-center font-semibold rounded-md p-2 text-[#23223C] bg-[#DBBFFF]"
      >
        Get started
      </a>
      <Features names={pro} />
    </div>
  </div>
</BaseLayout>

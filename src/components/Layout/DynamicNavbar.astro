<nav
  id="navbar"
  class="sticky top-0 z-10 -mb-16 flex h-16 items-center justify-center border-b border-[#FFFFFF20] text-background backdrop-blur transition-all"
>
  <a
    href="/"
    class="absolute left-5 flex cursor-pointer items-center gap-2 text-2xl font-bold"
  >
    <img
      src="/logo.png"
      alt="Logo of Flowmodor"
      width={32}
      height={32}
      class="rounded-md bg-background"
      draggable={false}
    />
    <div>Flowmodor</div>
  </a>
  <div class="hidden gap-10 text-lg font-medium sm:flex">
    <a href="/blog">Blog</a>
    <a href="/pricing">Pricing</a>
  </div>
  <a
    id="get-started"
    href="https://app.flowmodor.com/signin"
    class="absolute right-5 cursor-pointer rounded-md bg-background p-2 text-sm font-medium text-white transition-all"
  >
    Get started
  </a>
</nav>
<script>
  const navbar = document.getElementById('navbar');
  const getStarted = document.getElementById('get-started');

  function handleScroll() {
    if (navbar === null || getStarted === null) {
      return;
    }

    const windowHeight = window.innerHeight - 30;
    if (window.scrollY > windowHeight) {
      navbar.classList.add('text-white');
      getStarted.classList.add('bg-primary', 'text-[#131221]');
    } else {
      navbar.classList.remove('text-white');
      getStarted.classList.remove('bg-primary', 'text-[#131221]');
    }
  }

  window.addEventListener('scroll', handleScroll);
</script>
